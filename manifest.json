{
  "name": "WebXR API Emulator",
  "short_name": "WebXR Emu",
  "version": "0.1.3",
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "description": "WebXR API Emulator",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "src/math.js",
      "src/controller.js",
      "src/headset.js",
      "src/webxr-polyfill.js",
      "src/device.js",
      "src/device-manager.js",
      "content-script.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "WebXR API Emulator",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "devices.json"
  ]
}
